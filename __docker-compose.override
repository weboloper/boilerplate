services:
  backend:
    command: >
      sh -c "python manage.py runserver 0.0.0.0:8000"
    environment:
      - DJANGO_ENV=development
    volumes:
      - ./backend:/django
      - ./backend/.env.dev:/django/.env.dev
  nginx:
    volumes:
      - ./nginx/nginx/local.conf:/etc/nginx/conf.d/default.conf
    ports:
      - "80:80"
    
  certbot:
    restart: no
    entrypoint: "/bin/sh -c 'echo Skipping certbot on local'"